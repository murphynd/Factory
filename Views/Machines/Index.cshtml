@{
  Layout = "_Layout";
}
@using Factory.Models;
<div class="container">
  <div class="jumbotron">
    <h4>Machines </h4>
    <h1>Index</h1>
  </div>
  @if (Model.Count == 0)
  {
    <p>There are not Machines running at this Factory</p>
  }
  <ol>
    @foreach (Machine machine in Model)
    {
      <li>@Html.ActionLink(machine.Name, "Details", new{id=machine.MachineId})</li>
    }
  </ol>
  @Html.ActionLink("Create New Machines","Create", new { @class="btn btn-info" })
</div>