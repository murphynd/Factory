@{
  Layout = "_Layout";
}

@model Factory.Models.Machine
<div class="container">
  <div class="jumbotron">
    <h4>Machines Edit</h4>
  </div>
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.MachineId)
    <h4>Name of Machine</h4>
    @Html.TextBoxFor(model => model.Name, new {@required="required"})
    <h4>Description</h4>
    @Html.TextBoxFor(model => model.Disc, new {@required="required"})
    <input type="submit" value="save" class="btn btn-default" />
  }
</div>