@{
  Layout = "_Layout";
}
@using Factory.Models;

<div class="container">
  <div class="jumbotron">
    <h4>Machine</h4>
    <h1>@Model.Name </h1>
  </div>
  @if (Model.Licenses.Count == 0)
  {
    <p>@Model.Name has no Engineers working on it.</p>
  }
  <ul>
    @foreach (License license in Model.Licenses)
    {
      <li>@license.Engineer.Name - </li>
    }
  </ul>
  @Html.ActionLink("Back to Machines","Index", null, new { @class="btn btn-info" })
  @Html.ActionLink("Edit Machines","Edit", new {id=Model.MachineId}, new { @class="btn btn-info" })
  @Html.ActionLink("Delete Machines","Delete",new {id=Model.MachineId}, new { @class="btn btn-info" })
</div>