@{
  Layout = "_Layout";
}

@using Factory.Models;
<div class="container">
  <div class="jumbotron">
    <h4>Engineers </h4>
    <h1>Index</h1>
  </div>
  @if (Model.Count == 0)
  {
    <p>There are not Engineers Working at this Factory</p>
  }
  <ol>
    @foreach (Engineer engineer in Model)
    {
      <li>@Html.ActionLink(engineer.Name, "Details", new{id=engineer.EngineerId})</li>
    }
  </ol>
  @Html.ActionLink("Create New Engineer","Create", new { @class="btn btn-info" })
</div>