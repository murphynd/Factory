@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Add a Machine</h2>
<h4>Add a Machine to this task: @Html.DisplayFor(model => model.Name)</h4>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)
  @Html.Label("Select Machine")
  @Html.DropDownList("MachineId")
  <input type="submit" value="Save" />
}
<button>@Html.ActionLink("Back to list", "Index")</button>